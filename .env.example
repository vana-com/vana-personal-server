# Personal Server Configuration
# Copy this to .env and fill in your actual values

# Server configuration
API_HOST=0.0.0.0
API_PORT=8000

# Mock mode for testing (set to false for production with real blockchain)
MOCK_MODE=true

# Blockchain configuration (for production)
WALLET_MNEMONIC=shoe pass menu sniff phrase despair corn phone then rotate sheriff drop
MNEMONIC_LANGUAGE=english
CHAIN_ID=1
RPC_URL=http://localhost:8545
DATA_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
DATA_PERMISSIONS_ADDRESS=0x0000000000000000000000000000000000000000

# Replicate API configuration (for LLM inference)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Logging configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Performance and Caching Configuration
# CACHE_TTL_SECONDS=300
# REQUEST_TIMEOUT_SECONDS=30

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=false
# If enabling rate limiting, configure Redis:
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# Advanced rate limiting settings (defaults shown)
# RATE_LIMIT_USE_IP=true
# RATE_LIMIT_USE_SIGNATURE=true
# RATE_LIMIT_DEFAULT_RPM=60
# RATE_LIMIT_OPERATIONS_PER_HOUR=100
# RATE_LIMIT_IDENTITY_RPM=120
# RATE_LIMIT_WHITELIST_IPS=127.0.0.1,::1

# AI Agent Configuration (for personal data analysis)

# Gemini CLI (Google AI agent for personal data insights)
# Option 1: Use Google API key
# GEMINI_API_KEY=your_google_api_key_here

# Option 2: Leave empty to use OAuth in development
GEMINI_TIMEOUT_SEC=180
GEMINI_MAX_STDOUT_MB=2

# Advanced Gemini settings (optional)
# GEMINI_USE_VERTEX_AI=false
# GEMINI_CLI_PATH=/path/to/gemini

# Qwen CLI (Alibaba AI agent for personal data analysis)
# Option 1: Use API key for production
# QWEN_API_KEY=your_api_key_here
# QWEN_API_URL=https://api.qwen.ai/v1
# QWEN_MODEL_NAME=qwen-coder-32b

# Option 2: Leave empty to use OAuth in development
QWEN_TIMEOUT_SEC=180
QWEN_MAX_STDOUT_MB=2

# Advanced Qwen settings (optional)
# QWEN_CLI_PATH=/path/to/qwen

# Cloudflare R2 Storage (for encrypted artifacts)
# Required for artifact storage
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=personal-server-artifacts